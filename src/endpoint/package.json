{
    "name": "iobackend-unified",
    "version": "1.0.0",
    "description": "Unified IO Backend combining CrossWord backend, dependencies, and main server functionality",
    "main": "Receive.ts",
    "type": "module",
    "engines": {
        "node": ">=22"
    },
    "scripts": {
        "start": "tsx Receive.ts",
        "start:fastify": "tsx server/fastify-server.ts",
        "pack:portable": "PORTABLE_NODE_MODULES_MODE=none node ./scripts/pack-portable.mjs",
        "pack:portable:ci": "PORTABLE_NODE_MODULES_MODE=ci node ./scripts/pack-portable.mjs",
        "pack:portable:fast": "PORTABLE_NODE_MODULES_MODE=copy node ./scripts/pack-portable.mjs",
        "deno:start": "deno run --allow-net --allow-env --allow-read --allow-write --allow-ffi --unstable server/fastify-server.ts",
        "deno:dev": "deno run --allow-net --allow-env --allow-read --allow-write --allow-ffi --unstable --watch server/fastify-server.ts",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "test": "npm run test:unit",
        "test:unit": "python -m pytest tests/unit/ -v",
        "test:integration": "echo \"Integration tests not yet configured\" && exit 0",
        "build": "npm install --include=dev",
        "dev": "npm run start"
    },
    "keywords": [
        "backend",
        "fastify",
        "ai",
        "crossword",
        "unified"
    ],
    "author": "",
    "license": "MIT",
    "imports": {
        "@rs-core/*": "./lib/shared/*",
        "@rs-com/*": "./lib/com/*",
        "@rs-server/*": "./server/*"
    },
    "dependencies": {
        "@fastify/autoload": "^6.0.3",
        "@fastify/caching": "^9.0.2",
        "@fastify/compress": "^8.0.1",
        "@fastify/cors": "^10.0.1",
        "@fastify/etag": "^6.0.2",
        "@fastify/formbody": "^8.0.2",
        "@fastify/static": "^8.0.3",
        "@fastify/websocket": "^11.2.0",
        "@toon-format/toon": "^2.1.0",
        "axios": "^1.13.2",
        "clipboardy": "^5.0.1",
        "close-with-grace": "^2.1.0",
        "dotenv": "^16.4.7",
        "fastify": "^5.7.4",
        "iconv-lite": "^0.7.0",
        "jsox": "^1.2.124",
        "socket.io": "^4.8.1"
    },
    "optionalDependencies": {
        "robotjs": "^0.6.0"
    },
    "devDependencies": {
        "@types/node": "^22.10.2",
        "tsx": "^4.21.0",
        "typescript": "^5.7.2"
    },
    "browserslist": [
        "last 1 chrome version",
        "last 1 firefox version"
    ]
}
