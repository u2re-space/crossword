{
    "include": [
        "**/*.ts",
        "**/*.js"
    ],
    "exclude": [
        "./node_modules/**/*",
        "./dist/**/*",
        "./windows_use/**/*",
        "./portable/**/*",
        "./src/**/*.js",
        "./src/**/*.jsx"
    ],
    "baseUrl": "./",
    "compilerOptions": {
        "paths": {
            "@rs-core/*": [
                "./lib/shared/*"
            ],
            "@rs-com/*": [
                "./lib/com/*"
            ],
            "@rs-server/*": [
                "./server/*"
            ],
            "@rs-lib/*": [
                "./lib/*"
            ]
        },
        "outDir": "./dist/",
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "esModuleInterop": true,
        "allowImportingTsExtensions": true,
        "allowArbitraryExtensions": true,
        "allowSyntheticDefaultImports": true,
        "allowUmdGlobalAccess": true,
        "allowUnreachableCode": true,
        "allowUnusedLabels": true,
        "skipLibCheck": true,
        "strict": false,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "declaration": false,
        "inlineSources": true,
        "inlineSourceMap": true,
        "sourceMap": false,
        "experimentalDecorators": true,
        "types": [
            "node"
        ],
        "noEmit": true,
        "noEmitOnError": true,
        "noEmitHelpers": true
    },
    "compileOnSave": false
}
