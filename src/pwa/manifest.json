{
    "name": "cross.word",
    "short_name": "CrossWord",
    "description": "AI-powered text recognition, markdown viewer, and productivity tools",
    "start_url": "/",
    "display": "standalone",
    "background_color": "#000000",
    "theme_color": "#000000",
    "categories": ["productivity", "lifestyle", "finance", "navigation"],
    "icons": [
        {
            "src": "./icons/icon-duotone.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "./icons/icon-duotone.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "monochrome"
        }
    ],
    "share_target": {
        "action": "/share-target",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url",
            "files": [
                { "name": "files", "accept": ["image/*", "text/*", "application/pdf", "application/json"] }
            ]
        }
    },
    "shortcuts": [
        {
            "name": "Recognize (AI)",
            "short_name": "Recognize",
            "url": "/?action=recognize",
            "description": "AI-powered text and image recognition"
        },
        {
            "name": "Analyze (AI)",
            "short_name": "Analyze",
            "url": "/?action=analyze",
            "description": "AI-powered content analysis"
        }
    ],
    "handle_links": "preferred",
    "launch_handler": {
        "client_mode": "focus-existing"
    }
}
