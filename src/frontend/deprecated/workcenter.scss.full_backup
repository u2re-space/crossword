                        text-transform: capitalize;
                    }

                    .action-time,
                    .action-duration {
                        font-size: var(--text-sm);
                        color: var(--color-on-surface-variant);
                    }
                }

                .action-actions {
                    display: flex;
                    gap: var(--space-sm);
                }
            }

            .action-content {

                .input-preview,
                .result-preview,
                .error-preview {
                    margin-bottom: var(--space-sm);
                    font-size: var(--text-sm);

                    strong {
                        color: var(--color-on-surface);
                        margin-right: var(--space-sm);
                    }
                }

                .result-content {
                    background: var(--color-surface-container);
                    padding: var(--space-sm);
                    border-radius: var(--radius-sm);
                    font-family: var(--font-family-mono);
                    max-height: 100px;
                    overflow: hidden;
                    white-space: pre-wrap;
                }

                .error-preview {
                    color: var(--color-error);
                    background: color-mix(in oklab, var(--color-error) 10%, transparent);
                    padding: var(--space-sm);
                    border-radius: var(--radius-sm);
                }
            }
        }

        .no-history {
            text-align: center;
            color: var(--color-on-surface-variant);
            padding: var(--space-xl);
            font-style: italic;
        }
    }
}

.action-details-modal {
    .modal-content {
        width: 600px;
        max-width: 90vw;
    }

    .details-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--space-md);
        padding: var(--space-lg);
        border-bottom: 1px solid color-mix(in oklab, var(--color-outline-variant) 50%, transparent);

        .detail-item {
            display: flex;
            flex-direction: column;
            gap: var(--space-xs);

            label {
                font-weight: var(--font-weight-medium);
                color: var(--color-on-surface-variant);
                font-size: var(--text-sm);
            }

            span {
                color: var(--color-on-surface);
                font-family: var(--font-family-mono);
                font-size: var(--text-sm);
                word-break: break-all;

                &.status-completed {
                    color: var(--color-primary);
                    font-weight: var(--font-weight-medium);
                }

                &.status-failed {
                    color: var(--color-error);
                    font-weight: var(--font-weight-medium);
                }
            }
        }
    }

    .details-section {
        padding: var(--space-lg);

        &:not(:last-child) {
            border-bottom: 1px solid color-mix(in oklab, var(--color-outline-variant) 50%, transparent);
        }

        h4 {
            margin: 0 0 var(--space-md) 0;
            font-size: var(--text-lg);
            font-weight: var(--font-weight-semibold);
            color: var(--color-on-surface);
        }

        .input-details,
        .result-details,
        .error-details {
            background: var(--color-surface-container);
            padding: var(--space-md);
            border-radius: var(--radius-md);
            font-size: var(--text-sm);
            line-height: var(--leading-relaxed);

            pre {
                background: var(--color-surface-container-high);
                padding: var(--space-sm);
                border-radius: var(--radius-sm);
                margin: var(--space-sm) 0 0 0;
                font-family: var(--font-family-mono);
                white-space: pre-wrap;
                word-wrap: break-word;
                max-height: 200px;
                overflow-y: auto;
            }
        }

        .error-details {
            background: color-mix(in oklab, var(--color-error) 10%, transparent);
            color: var(--color-error);
            border: 1px solid color-mix(in oklab, var(--color-error) 30%, transparent);
        }
    }
}

@layer prompt {

    .prompt-controls {
        display: flex;
        gap: var(--space-md, 0.75rem);
        align-items: center;
        place-content: center;
        place-items: center;
        flex-wrap: wrap;

        // Responsive layout
        @container (max-width: 768px) {
            gap: var(--space-sm, 0.5rem);
        }

        @container (max-width: 480px) {
            //flex-direction: column;
            align-items: stretch;
            gap: var(--space-sm, 0.5rem);
        }

        .template-select {
            flex: 1;
            padding: var(--space-sm, 0.5rem) var(--space-md, 0.75rem);
            border-radius: var(--radius-sm, 4px);
            background: var(--color-surface);
            color: var(--color-on-surface);
            font-size: var(--text-sm, 0.875rem);
            font-weight: var(--font-weight-medium, 500);
            font-family: var(--font-family);
            cursor: pointer;
            min-height: 36px;

            @container (max-width: 768px) {
                min-height: 40px;
            }

            &:hover {
                background: var(--color-surface-container-high);
                border-color: var(--color-primary);
            }

            &:focus {
                outline: none;
                border-color: var(--color-primary);
            }
        }

        .btn-icon {

            @container (max-width: 480px) {
                span {
                    display: none;
                }
            }
        }

        .icon-btn {
            inline-size: 40px;
            block-size: 40px;
            border-radius: var(--radius-sm, 4px);
            border: none;
            background: var(--color-surface-container);
            color: var(--color-on-surface);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all var(--motion-fast, 140ms ease);

            ui-icon {
                transition: color var(--motion-fast, 140ms ease);
            }

            // Responsive sizing
            @container (max-width: 768px) {
                inline-size: 36px;
                block-size: 36px;
            }

            @container (max-width: 480px) {
                inline-size: 32px;
                block-size: 32px;
            }

            &:hover {
                background: var(--color-surface-container-high);
                box-shadow: var(--elev-1);

                ui-icon {
                    color: var(--color-primary);
                }
            }

            &:focus-visible {
                outline: none;
                box-shadow: var(--focus-ring);
            }
        }
    }

    .prompt-input {
        inline-size: stretch;
        min-block-size: 120px;
        padding: var(--space-md);
        border: none;
        border-radius: var(--radius-sm);
        background: var(--color-surface);
        color: var(--color-on-surface);
        font-family: var(--font-family-system);
        font-size: var(--text-sm);
        line-height: var(--leading-relaxed);
        resize: vertical;
        box-shadow: var(--elev-0);

        // Simple scrollbar
        scrollbar-width: thin;
        scrollbar-color: var(--color-outline-variant) transparent;

        &::-webkit-scrollbar {
            inline-size: 4px;
            block-size: 4px;
        }

        &::-webkit-scrollbar-thumb {
            background: var(--color-outline-variant);
        }

        // Responsive adjustments
        @container (max-width: 1024px) {
            padding-inline: var(--space-sm);
            padding-block: var(--space-sm);
            min-block-size: 100px;
        }

        @container (max-width: 768px) {
            padding-inline: var(--space-xs);
            padding-block: var(--space-xs);
            min-block-size: 80px;
        }

        &:hover {
            background: var(--color-surface-container-low);
            box-shadow: var(--elev-1);
        }

        &:focus {
            outline: none;
            background: var(--color-surface-container-high);
            box-shadow: var(--focus-ring);
        }

        &::placeholder {
            color: var(--color-on-surface-variant);
            opacity: 0.8;
        }
    }

    .file-input-area {
        position: absolute;
        inset: 0;
        pointer-events: none;
        opacity: 0;
        visibility: hidden;
        border: none;
        border-radius: var(--radius-md);
        padding-inline: var(--space-lg);
        padding-block: var(--space-lg);
        background: var(--color-surface-container-low);
        box-shadow: var(--elev-1);
        z-index: 10;
        transition: all var(--motion-normal);

        // Responsive padding
        @container (max-width: 1024px) {
            padding-inline: var(--space-md);
            padding-block: var(--space-md);
        }

        @container (max-width: 768px) {
            padding-inline: var(--space-sm);
            padding-block: var(--space-sm);
        }

        // Overlay styles when visible
        &.drag-over {
            opacity: 1;
            visibility: visible;
            background: color-mix(in oklab, var(--color-primary) 10%, var(--color-surface-container-low));
            box-shadow: var(--focus-ring), var(--elev-2);

            .drop-zone-content {
                opacity: 1;
                visibility: visible;
            }
        }
    }
}

@layer toolbar {
    .workcenter-badge {
        position: absolute;
        top: -8px;
        right: -8px;
        background: var(--color-primary);
        color: var(--color-on-primary);
        border-radius: var(--radius-full);
        padding: 2px 6px;
        font-size: var(--text-xs);
        font-weight: var(--font-weight-medium);
        min-width: 18px;
        height: 18px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 2px solid var(--color-surface);
        box-shadow: var(--shadow-sm);

        &:empty,
        &:not([data-count]):not(:has-content) {
            display: none;
        }
    }

    // Ensure toolbar buttons are positioned relatively for badge positioning
    .toolbar .btn {
        position: relative;
    }
}