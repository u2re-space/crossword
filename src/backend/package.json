{
    "name": "crossword-backend",
    "version": "0.0.1",
    "description": "",
    "type": "module",
    "engines": {
        "node": ">=22"
    },
    "keywords": [
        "crossword",
        "backend"
    ],
    "imports": {
        "@rs-core/*": "../core/*",
        "@rs-frontend/*": "../frontend/*",
        "@rs-shared/*": "../shared/*",
        "@rs-test/*": "../test/*"
    },
    "license": "MIT",
    "private": false,
    "scripts": {
        "deno:start": "deno run --allow-net --allow-env --allow-read --allow-write --allow-ffi --unstable server.ts",
        "deno:dev": "deno run --allow-net --allow-env --allow-read --allow-write --allow-ffi --unstable --watch server.ts",
        "build": "npm install --include=dev",
        "start": "tsx ./server.ts --port 8443 --address 0.0.0.0 --debug --options --esm",
        "dev": "npm run start",
        "test": "npm run test:dev",
        "test:dev": "vite dev --config vite.config.ts",
        "test:test": "echo 'No tests configured for fastify-server' && exit 0"
    },
    "target": "web",
    "dependencies": {
        "@fastify/autoload": "^6.0.3",
        "@fastify/caching": "^9.0.2",
        "@fastify/compress": "^8.0.1",
        "@fastify/cors": "^10.0.1",
        "@fastify/etag": "^6.0.2",
        "@fastify/static": "^8.0.3",
        "@toon-format/toon": "^2.1.0",
        "close-with-grace": "^2.1.0",
        "dotenv": "^16.4.7",
        "fastify": "^5.2.0",
        "jsox": "^1.2.124",
        "socket.io": "^4.7.5"
    },
    "browserslist": [
        "last 1 chrome version",
        "last 1 firefox version"
    ]
}
