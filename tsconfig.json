{
    "include": ["./main.mjs", "./src/index.mjs", "./pwa/sw.mjs", "./src/**/*.ts", "./test/**/*.ts", "./shared/**/*.ts"],
    "exclude": ["./dist/**/*", "./externals/**/*"],
    "compilerOptions": {
        "outDir": "./dist/",
        "paths": {
            "@phosphor-icons/core/assets/*": ["./node_modules/@phosphor-icons/core/assets/*"],
            "icons/*": ["./node_modules/@phosphor-icons/core/assets/*"],
            "fonts/*": ["./shared/fonts/*"],
            "fest-src/*": ["./shared/*"],
            "fest/*": ["./shared/fest/*"],
            "fest/fl-ui/*": ["./shared/fest/fl-ui/*"],
            "fest/dom": ["./shared/fest/dom/index.ts"],
            "fest/lure": ["./shared/fest/lure/index.ts"],
            "fest/object": ["./shared/fest/object/index.ts"],
            "fest/uniform": ["./shared/fest/uniform/index.ts"],
            "fest/theme": ["./shared/fest/theme/index.ts"],
            "fest/polyfill/*": ["./shared/fest/polyfill/*"],
            "polyfill/*": ["./shared/fest/polyfill/*"],
            "shared/*": ["./shared/*"],
            "@legacy/*": ["./shared/fest/fl-ui/legacy/*"],
            "@helpers/*": ["./shared/fest/fl-ui/helpers/*"],
            "@scss/*": ["./shared/fest/fl-ui/scss/*"]
        },
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": ["ESNext", "DOM", "WebWorker"],
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "allowArbitraryExtensions": true,
        "allowSyntheticDefaultImports": true,
        "allowUmdGlobalAccess": true,
        "allowUnreachableCode": true,
        "allowUnusedLabels": true,
        "noImplicitAny": false,
        "declaration": false,
        "noImplicitThis": false,
        "inlineSources": true,
        "inlineSourceMap": true,
        "sourceMap": false,
        "experimentalDecorators": true
    }
}
